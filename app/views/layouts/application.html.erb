<!DOCTYPE html>
<html>

  <head>
    <title>Tweetie</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
  
    <%= link_to '設定変更', edit_user_registration_path %>

    <% if user_signed_in? %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
    <% end %>
    
    <% if !alert.nil? %>
      <%= alert %>
    <% end %>
    <% if !notice.nil? %>
      <%= alert %>
    <% end %>
    
    
    <%= yield %>
  
  </body>
</html>
