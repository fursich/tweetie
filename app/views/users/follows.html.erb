
<%= render 'partials/header', srchpath: false %>

<div class='container-fluid'>

  <div class='row main-row'>
    <div class='col-sm-2'></div>
    <div class='col-sm-8 col-xs-12 main-container'>

      <%= render 'partials/alert' %>

      <div class='follow-list-title'>
        <% if params[:action] == 'follower_list' %>
          <%= link_to user_path(@user.id) do %>@<%= @user.name %><% end %>のフォロワー
        <% elsif params[:action] == 'following_list' %>
          <%= link_to user_path(@user.id) do %>@<%= @user.name %><% end %>がフォロー中
        <% end %>
      </div>

      <% @users.each do |user| %>
        <%= render 'partials/user_profile', u: user %>
      <% end %>

        <%= paginate @users %>
      </div>

    </div>
    <div class='col-sm-2'></div>
  </div>

</div>  
