
<%= render 'partials/header', srch: false %>

<div class='tw-auth tw-signup'>
  
  <div class='row'>
    <div class='col-sm-2'></div>
    <div class='col-sm-8 col-xs-12'>

      <div class='page-title'>
        新規登録
      </div>
    
    
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class='col-md-4'></div>
        <div class='col-md-8'>
          <div class='devise_error'>
            <%= devise_error_messages! %>
          </div>
        </div>
      
        <div class="form-group row">
          <div class='col-md-4 user-form-label'>
            <%= f.label :name %>
          </div>
          <div class='col-md-8'>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>
        </div>
    
        <div class="form-group row">
          <div class='col-md-4 user-form-label'>
            <%= f.label :email %>
          </div>
          <div class='col-md-8'>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>
    
        <div class="form-group row">
          <div class='col-md-4 user-form-label'>
          <%= f.label :password %>
          </div>
          <div class='col-md-8'>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>
      
        <div class="form-group row">
          <div class='col-md-4 user-form-label'>
            <%= f.label :password_confirmation %>
          </div>
          <div class='col-md-8'>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>
    
        <div class="form-group row">
          <div class='col-md-4 user-form-label'>
            <%= f.label :image %>
          </div>
          <div class='col-md-8'>
            <div class='prof-image-box'>
              <%= image_tag f.object.image_url, class: 'prof-image' %>
            </div>
            <%= f.file_field :image %>
            <%= f.hidden_field :image_cache %>
          </div>
        </div>
    
        <div class="form-group row">
          <div class='col-md-4 user-form-label'>
            <%= f.label :profile %>
          </div>
          <div class='col-md-8'>
            <%= f.text_area :profile, rows: '3', class: 'form-control' %>
          </div>
        </div>
    
        <div class="row">
          <div class='col-md-4 user-form-label'></div>
          <div class='col-md-8'>
            <div class="actions">
              <%= f.submit "登録", class: "btn oath-btn" %>
            </div>
          </div>
        </div>
      <% end %>
    
      <div class="row">
        <div class='col-md-4 user-form-label'></div>
        <div class='col-md-8'>
          <div class='links'>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
    <div class='col-sm-2'></div>
    
  </div>
</div>


