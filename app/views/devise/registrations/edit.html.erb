
<%= render 'partials/header', srchpath: false %>

<% if current_user.via_sns? %>
  <%= render 'devise/registrations/sns_edit' %>
<% else %>

  <div class='tw-auth tw-profile-edit'>
  
    <div class='row'>
      <div class='col-sm-2'></div>
      <div class='col-sm-8 col-xs-12'>
  
        <div class='page-title'>
          設定変更
        </div>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class='devise_error'>
            <%= devise_error_messages! %>
          </div>
        
          <div class="form-group row">
            <div class='col-md-4 user-form-label'>
              <%= f.label :name %>
            </div>
            <div class='col-md-8'>
              <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  
            </div>
          </div>
      
          <div class="form-group row">
            <div class='col-md-4 user-form-label'>
              <%= f.label :email %>
            </div>
            <div class='col-md-8'>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>
        
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>現在メールによる確認待ちです: <%= resource.unconfirmed_email %></div>
          <% end %>
  
  
          <div class="form-group row">
            <div class='col-md-4 user-form-label'>
              <%= f.label :current_password %>
            </div>
            <div class='col-md-8'>
              <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
            </div>
          </div>
          
          <div class="form-group row">
            <div class='col-md-4 user-form-label'>
              <%= f.label :password %><strong>(変更する場合)</strong>
            </div>
            <div class='col-md-8'>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>
          </div>
        
          <div class="form-group row">
            <div class='col-md-4 user-form-label'>
              <%= f.label :password_confirmation %>
            </div>
            <div class='col-md-8'>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>
          </div>
      
      
          <div class="form-group row">
            <div class='col-md-4 user-form-label'>
              <%= f.label :image %>
            </div>
            <div class='col-md-8'>
  
              <div class='image-file-area'>
                <%= f.file_field :image, class: 'image-file-button' %>
                <%= f.hidden_field :image_cache %>
              </div>
  
              <div class='prof-image-area clearfix'>
                <div class='prof-image-box'>
                  <%= image_tag f.object.image_url, class: 'prof-image' %>
                </div>
                <div class='prof-image-remove-option'>
                  <%= f.check_box :remove_image %>
                  <%= f.label :remove_image %>
                </div>
              </div>
            </div>
              
          </div>
      
          <div class="form-group row">
            <div class='col-md-4 user-form-label'>
              <%= f.label :profile %>
            </div>
            <div class='col-md-8'>
              <%= f.text_area :profile, rows: '3', class: 'form-control' %>
            </div>
          </div>
      
          <div class="row">
            <div class='col-md-4 user-form-label'></div>
            <div class='col-md-8'>
  
              <div class="row">
                <div class='col-xs-8'>
  
                  <div class="actions clearfix">
                    <%= f.submit "変更", class: "btn oath-btn" %>
                    <br />
                    <div class='links back-link'>
                      <%= link_to "戻る", :back, class: 'btn back-btn' %>
                    </div>
                  </div>
                </div>
                <div class='col-xs-4'>
                  <div class='user-unregister'>
                    退会する場合<br />
                    <%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "退会してよろしいですか?" }, method: :delete, class: "btn btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
  
        <% end %>
  
      </div>
    </div>
  </div>
<% end %>
  