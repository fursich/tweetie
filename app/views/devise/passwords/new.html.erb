
<%= render 'partials/header', srchpath: false %>

<div class='tw-auth tw-lost-password'>

  <div class='row'>
    <div class='col-sm-2'></div>
    <div class='col-sm-8 col-xs-12'>

      <div class='page-title'>
        パスワードを忘れた場合
      </div>
      
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class='devise_error'>
          <%= devise_error_messages! %>
        </div>
      
        <div class="form-group row">
          <div class='col-md-4 user-form-label'>
            <%= f.label :email %>
          </div>
          <div class='col-md-8'>
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>
        </div>
      
        <hr>
        <div class="actions reset-pwd-box">
          <span class="reset-pwd-msg">
            送信ボタンを押すと､パスワードを再設定する方法がメールで送信されます｡
          </span>
          <div class='reset-pwd-btn'>
            <%= f.submit "送信", class: 'btn oath-btn', data: {disable_with: '機能停止中'}, disabled: true %>
          </div>
        </div>
      <% end %>
    
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
