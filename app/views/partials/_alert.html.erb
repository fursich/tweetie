
<!--メッセージ･アラート機能-->

<p class='notice'><%= notice if flash[:notice].present? %></p>

<!--flash[:alert]は､ハッシュだけでなくdeviseから文字列でも渡されることもあるので､処理を分ける-->

<% if flash[:alert].present? %>
  <% if flash[:alert].is_a?(String) %>
    <p class='alert'><%= alert %></p>
  <% elsif flash[:alert].is_a?(Array) %>
    <% flash[:alert].each do |message| %>
      <p class='alert'><%= message %></p>
    <% end %>
  <% end %>
<% end %>
