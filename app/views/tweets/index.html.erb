
<%= render 'partials/header', srchpath: search_tweets_path %>

<div class='container-fluid'>

  <div class='row main-row'>
    <div class='col-sm-2'></div>
    <div class='col-sm-8 col-xs-12 main-container'>

      <%= render 'partials/alert' %>

      <div class='index-new-tweet'>
        <%= render 'partials/new_tweet', t: @tweet, reply_to: false, ajax_post: true %>
      </div>

      <div class="timeline">
      
        <div class='tweet-container'>
          <% @tweets.each do |tweet| %>
            <%= render 'partials/trace_tweets', t: tweet %>
          <% end %>
        </div>
        
        <%= paginate @tweets %>
      </div>

    </div>
    <div class='col-sm-2'></div>
  </div>

</div>  
