
<div class="wrapper tweet_edit">
  <h1>Tweetie#index</h1>

  <%= form_for @tweet do |f| %>

    <div class='form-group'>
      <%= f.text_area :content, class: 'form-controller' %>
    </div>
    <%= f.submit '更新する', class: 'btn btn-primary' %>
  <% end %>
  
  <%= link_to '戻る', root_path %>

    <div class='tweet_delete'>
      <%= button_to 'つぶやきを削除する', method: :destroy, id: current_user.id %>
    </div>
</div>

