
<div class="wrapper tweet_edit">
  <h1>Tweetie#index</h1>

  <%= form_for @tweet do |f| %>

  <div class='form-group'>
    <%= f.text_area :content, class: 'form-controller' %>
  </div>
  <%= f.submit 'つぶやく', class: 'btn btn-primary' %>
  <% end %>

  <% @tweets.each do |tweet| %>
    <div class='tweet_content'>
      <%= tweet.content %>
    </div>
    <div class='user_name'>
      <%= tweet.user.name %>
    </div>
    <% if tweet.user_id == current_user.id %>
      <div class='tweet_edit'>
        <%= link_to 'つぶやきを編集する', edit_tweet_path, id: current_user.id %>
      </div>
    <% end %>
  <% end %>
</div>

