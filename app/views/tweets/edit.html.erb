
<div id="tweet_edit">

  <%= render 'tweets/alert' %>

  
  <%= form_for @tweet do |f| %>

    <div class='form-group'>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <%= f.submit '更新する', class: 'btn btn-primary' %>
  <% end %>
  
  <%= link_to '戻る', root_path %>

    <div class='tweet_delete'>
      <%= button_to 'つぶやきを削除する', tweet_path(id: @tweet.id), method: :delete, class: 'btn btn-danger', data: {confirm: '削除していいですか？'} %>
    </div>
</div>

