
<%= render 'partials/header', srchpath: tweets_path %>

<div class='container-fluid'>

  <div class='row'>
    <div class='col-sm-2'></div>
    <div class='col-sm-8 col-xs-12'>

      <div class="timeline">
      
        <%= render 'partials/alert' %>
  
        <%= render 'partials/new_tweet', t: @tweet %>
    
        <div class='tweet-del-btn'>
          <%= button_to 'つぶやきを削除', tweet_path(id: @tweet.id), method: :delete, class: 'btn btn-danger', data: {confirm: '削除していいですか？'} %>
        </div>

      </div>
    </div>
    <div class='col-sm-2'></div>
    
  </div>    
</div>    
